<script>
    function mostrarCampoCriterio() {
        const tipo = document.getElementById("tipoCriterio").value;
        const contenedor = document.getElementById("campoCriterio");
        contenedor.innerHTML = ""; // Limpia lo anterior

        if (tipo === "CriterioDeTexto") {
            contenedor.innerHTML = `
                <label for="valorTexto">Palabra clave:</label><br>
                <input type="text" id="valorTexto" name="valorTexto"><br><br>
            `;
        } else if (tipo === "CriterioFecha") {
            contenedor.innerHTML = `
                <label for="fechaDesde">Desde:</label>
                <input type="date" id="fechaDesde" name="fechaDesde"><br>
                <label for="fechaHasta">Hasta:</label>
                <input type="date" id="fechaHasta" name="fechaHasta"><br><br>
            `;
        } else if (tipo === "CriterioUbicacion") {
            contenedor.innerHTML = `
                <label for="provincia">Provincia:</label><br>
                <input type="text" id="provincia" name="provincia"><br><br>
            `;
        } else if (tipo === "CriterioCategoria") {
            contenedor.innerHTML = `
                <label for="categoria">Categoría:</label><br>
                <input type="text" id="categoria" name="categoria"><br><br>
            `;
        } else {
            contenedor.innerHTML = `<p style="color:#777;">(Este tipo de criterio no requiere parámetros)</p>`;
        }
    }
</script>
