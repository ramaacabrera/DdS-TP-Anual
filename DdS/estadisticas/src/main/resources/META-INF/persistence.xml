<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="servicioEstadisticas-PU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>estadisticas.domain.HechosYColecciones.Hecho</class>
        <class>estadisticas.domain.HechosYColecciones.Ubicacion</class>
        <class>estadisticas.domain.HechosYColecciones.Coleccion</class>
        <class>estadisticas.domain.HechosYColecciones.ContenidoMultimedia</class>
        <class>estadisticas.domain.HechosYColecciones.HechoModificado</class>
        <class>estadisticas.domain.HechosYColecciones.Etiqueta</class>
        <class>estadisticas.domain.fuente.Fuente</class>
        <class>estadisticas.domain.Usuario.Usuario</class>
        <class>estadisticas.domain.Criterios.CriterioContribuyente</class>
        <class>estadisticas.domain.Criterios.CriterioDeTexto</class>
        <class>estadisticas.domain.Criterios.CriterioEtiquetas</class>
        <class>estadisticas.domain.Criterios.CriterioFecha</class>
        <class>estadisticas.domain.Criterios.CriterioTipoFuente</class>
        <class>estadisticas.domain.Criterios.CriterioTipoMultimedia</class>
        <class>estadisticas.domain.Criterios.CriterioUbicacion</class>
        <class>estadisticas.domain.Solicitudes.Solicitud</class>
        <class>estadisticas.domain.Solicitudes.SolicitudDeEliminacion</class>
        <class>estadisticas.domain.Solicitudes.SolicitudDeModificacion</class>
        <properties>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/agregador_db?serverTimezone=America/Buenos_Aires"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="root"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL57Dialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.archive.autodetection" value="none"/>
        </properties>
    </persistence-unit>
    <persistence-unit name="estadisticas-PU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>estadisticas.domainEstadisticas.Estadisticas</class>
        <class>estadisticas.domainEstadisticas.EstadisticasCategoria</class>
        <class>estadisticas.domainEstadisticas.EstadisticasColeccion</class>
        <properties>
            <!--property name="hibernate.archive.autodetection" value="none"/-->
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/estadisticas_db?serverTimezone=America/Buenos_Aires"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="root"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL57Dialect"/>
            <!--property name="hibernate.hbm2ddl.auto" value="create-drop"/-->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <!-- CONFIGURACIÃ“N DEL POOL -->
            <property name="hibernate.connection.pool_size" value="100"/>
            <property name="hibernate.connection.validation-interval" value="30000"/>
            <property name="hibernate.jdbc.batch_size" value="20"/>
            <property name="hibernate.jdbc.fetch_size" value="100"/>
            <property name="hibernate.jdbc.timeout" value="30"/>
        </properties>
    </persistence-unit>
</persistence>